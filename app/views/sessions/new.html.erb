<h2 class="text-center"> Sign In </h2>

<%= form_tag sessions_path do %>
<div class="col-md-6 col-md-offset-3 col-xs-8 col-xs-offset-2">
  <div class="form-group">
    <%= label_tag :email, "Email", class: "control-label" %>
    <div>
      <%= email_field_tag :email, nil, class:"form-control", placeholder: "Email" %>
    </div>
  </div>
  <div class="form-group">
    <%= label_tag :password, "Password", class: "control-label" %>
    <%= link_to "(Forgot Password)", new_reset_password_path, class:"control-label" %>
    <div>
      <%= password_field_tag :password, nil, class:"form-control", placeholder: "Password" %>
    </div>
  </div>



    <div class='row'>
      <div class='col-md-12'>
        <%= link_to sign_in_with_twitter_path, class:'btn btn-block btn-social btn-lg btn-twitter' do %>
          <i class='fa fa-twitter'>Sign in with Twitter</i>
        <% end %>
      </div>
    </div>

    <div class='row'>
      <div class='col-md-12'>
        <%= link_to sign_in_facebook_path, class:'btn btn-block btn-social btn-lg btn-facebook' do %>
          <i class='fa fa-facebook'>Sign in with Facebook</i>
        <% end %>
      </div>
    </div>



  <br>
  <div class="text-center">
    <%= submit_tag 'Sign In', class: "btn btn-default btn-primary submit_btn" %>
  </div>
<% end %>
</div>
