<h2 class="text-center">Reset Password</h2>

<div class="row">
<%# form_tag("/reset_password", method: :post) do %>
<%= simple_form_for(:reset_password, url: reset_password_path(params[:id]), html: {method: :patch} ) do |f| %>
<%# f.hidden_field :email, value: params[:email] %>
<%= f.input :email, as: :hidden, input_html: {value: params[:email]} %>

  <div class="col-md-6 col-md-offset-3 col-xs-8 col-xs-offset-2">
    <div class="form-group">
      <%= f.input :password, class:"form-control", placeholder: "New password" %>
    </div>
    <div class="form-group">
      <%= f.input :password_confirmation, class:"form-control", placeholder: "Confirm new password" %>
    </div>
    <div class="text-center">
      <%= f.button :submit, 'Update Password', class: "btn btn-default btn-primary submit_btn" %>
    </div>
  </div>
<% end %>
</div>
