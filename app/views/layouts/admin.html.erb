<!DOCTYPE html>
<html>
  <head>

    <title>UndefinedDrills</title>

    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>

  </head>

  <body>
    <!-- Collect the nav links, forms, and other content for toggling -->
    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">

      <ul class="nav navbar-nav">
        <li class="active"><a href="/">Home</a> <span class="sr-only">(current)</span></a></li>
        <li><a href="#">Admin Panel: </a></li>
        <li><%= link_to 'Drillz(Groups)', groups_path %></li>
        <li><%= link_to 'Leaderboard', root_path %></li>
        </ul>

      <ul class="nav navbar-nav navbar-right">

        <li><%= link_to 'Logout', sessions_path, method: :delete %></li>
        <%# if user_signed_in? %>
          <li><%# link_to current_user.display_name, "/profile" %></li>
          <li><%# link_to "Logout", destroy_user_session_path, method: 'DELETE' %></li>
        <%# else %>
          <li><%# link_to "Login", new_user_session_path %></li>
          <li><%# link_to "Signup", new_user_registration_path %> </li>
        <%# end %>
      </ul>
    </div><!-- /.navbar-collapse -->
  </div><!-- /.container-fluid -->
    <% if notice %>
      <div class='alert alert-success'><%= notice %></div>
    <% elsif alert %>
      <div class='alert alert-danger'><%= alert %></div>
    <% end %>

    <div class='container'>
      <%= yield %>
    </div>

  </body>
</html>
