<!DOCTYPE html>
<html>
  <head>

    <title>UndefinedDrills</title>

    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <link href="https://fonts.googleapis.com/css?family=Cabin|Lato|Roboto" rel="stylesheet">  </head>
  <body>
    <%= render 'layouts/navbar' %>
    <% if notice %>
      <div class='alert alert-success floating_alert'><%= notice %></div>
    <% elsif alert %>
      <div class='alert alert-danger floating_alert'><%= alert %></div>
    <% end %>
    <div class='container'>
      <%= yield %>
    </div>
  </body>
</html>
